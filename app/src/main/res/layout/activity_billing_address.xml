<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rw.limitless.limitlessapps.ussd.BillingAddress"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_circle"
                android:layout_gravity="center"
                android:layout_marginRight="10dp">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/back"
                    android:id="@+id/back"/>

            </LinearLayout>

            <rw.limitless.limitlessapps.ussd.Textview_Bold
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Billing"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:id="@+id/next"
                    android:background="@drawable/reound_rect_yellow" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/background"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <rw.limitless.limitlessapps.ussd.Textview_Bold
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Address"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Billing Address"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/billingaddress"/>

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"
                android:id="@+id/billingaddress_view"/>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="City"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/city"/>

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"
                android:id="@+id/city_view"/>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="State/Province"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/province"/>

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"/>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Zip Code"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/zipcode"/>

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"/>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Postal Code"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/postcode"/>

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"/>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Country"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/country"/>

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"
                android:id="@+id/country_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <rw.limitless.limitlessapps.ussd.Textview_Bold
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Billing Details"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <com.alihafizji.library.CreditCardEditText
                    android:inputType="textNoSuggestions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Card Number"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/card_number"/>

            </com.wrapp.floatlabelededittext.FloatLabeledEditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"
                android:id="@+id/card_number_view"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Exp date (MM/yyy)"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:id="@+id/exp_date"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Verification"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:id="@+id/verification"
                    android:maxLength="3"
                    android:inputType="number"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"
                android:id="@+id/card_info"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <rw.limitless.limitlessapps.ussd.Textview_Bold
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Contact Billings"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Name"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:id="@+id/fullname"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Phone number"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="17dp"
                    android:id="@+id/phone_number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Email Address"
                    android:background="@android:color/transparent"
                    android:textColor="@color/buttongray"
                    android:backgroundTint="@color/buttongray"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:id="@+id/email"
                    android:inputType="textEmailAddress"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"
                android:id="@+id/fullname_view"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
